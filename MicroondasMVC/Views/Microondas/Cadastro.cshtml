@model MicroondasMVC.Models.ProgramaAquecimento

<h2>Novo Programa Customizado</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="SalvarPrograma" method="post">
            
            <div class="form-group mb-3">
                <label>Nome do Programa *</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Alimento *</label>
                <input asp-for="Alimento" class="form-control" />
                <span asp-validation-for="Alimento" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Tempo (em segundos) *</label>
                <input asp-for="Tempo" type="number" class="form-control" placeholder="Ex: 90" />
                <span asp-validation-for="Tempo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Potência (1 a 10) *</label>
                <input asp-for="Potencia" type="number" min="1" max="10" class="form-control" />
                <span asp-validation-for="Potencia" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Caractere de Aquecimento *</label>
                <!-- maxlength="1" garante que o usuário não digite string longa -->
                <input asp-for="CaractereAquecimento" class="form-control" maxlength="1" />
                <small class="text-muted">Proibido usar '.' ou repetir caracteres já usados em outros programas.</small>
                <span asp-validation-for="CaractereAquecimento" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Instruções (Opcional)</label>
                <textarea asp-for="Instrucoes" class="form-control" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Salvar Programa</button>
            <a href="/Microondas/Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>